var TOKEN_KEY = 'jwtToken';

$(document).on('submit', '#loginForm', function(e) {
		e.preventDefault();
		
		var username = $('#username').val();
		var password = $('#password').val();
		if (username == "" || password == "") {
			alert("You haven't entered username or password.");
			//showMessage("You haven't entered username or password.", "red");
			return;
		} else {
			$.ajax({
				type : 'POST',
				url : "../auth/login",
				contentType : 'application/json',
				data: loginFormToJSON(username, password),
				dataType: 'json',
				success : function(response) {
					//setJwtToken(response.accessToken);
					//$(location).attr('href', response.redirectionURL);
					setJwtToken(TOKEN_KEY, data.accessToken);
					console.log(data.userRoleName)
					if (data.userRoleName == "ROLE_HOTEL_ADMIN") {
						window.location.href = "hoteladmin.html";
					} else if (data.userRoleName == "ROLE_AIRLINE_ADMIN") {
						window.location.href = "airlineadmin.html";
					} else if (data.userRoleName == "ROLE_RENTACAR_ADMIN") {
						console.log('Role is rentacardmin');
						window.location.href = "rentacaradmin.html"
					} else if (data.userRoleName == "ROLE_REGISTERED_USER") {
						window.location.href = "ROLE_REGISTERED_USER.html";
					} else {
						window.location.href = "ROLE_SYSTEM_ADMIN.html"
					}
				},
				error: function (xhr, status) {
					showMessage('Login failed!', 'red');
				}
			});
		}
	})
	
function loginFormToJSON(username, password) {
	return JSON.stringify({
		"username" : username,
		"password" : password
	});
}
	
	
	
	